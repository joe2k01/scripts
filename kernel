# Start the whole stuff with a nice help function
function h() {
	echo -e ""
	echo -e "${BOLD}How to use:${RST} ./${0#./} <options>\n"
	echo -e "${BOLD}Options list:${RST}"
	echo -e "  -w, --wrap:        Wrap config inside wpk_ and _defconfig"
	echo -e "  -c, --config:      The defconfig to use while compiling"
	echo -e "  -d, --device:      The device to compile"
	exit
}

# Prints an error in bold red
RED="\033[01;31m"
function reportError() {
    echo -e ""
    echo -e ${RED}"${1}"${RST}
    if [[ -z ${2} ]]; then
        echo -e ""
    fi

    exit
}

while [[ $# -ge 1 ]]; do
	case "${1}" in

		"-c"|"--config")
			shift

			if [[ $# -ge 1 ]]; then
				DEFCONFIG=${1}
			else
				reportError "Please specify a defconfig!"
			fi ;;

		"-d"|"--device")
			shift

			case ${1} in
				"gts210vewifi")
				DEVICE=${1} ;;
				*)
					reportError "Invalid device!" ;;
			esac ;;

		"-h"|"--help")
			h ;;

		"-w"|"--wrap")
			WRAP=true ;;

		*)
			reportError "Invalid parameter" ;;
	esac
	shift
done
